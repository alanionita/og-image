{
  "compilerOptions": {
    "baseUrl": "./api",
    "outDir": "build",
    "typeRoots": ["node_modules/@types", "_types"],
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
  },
  "include": ["api/**/*", "_types/**/*"],
  "exclude": ["node_modules", ".serverless"]
}
